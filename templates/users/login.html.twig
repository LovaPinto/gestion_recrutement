{% extends 'base.html.twig' %}

{% block title %}Login Candidat{% endblock %}

{% block body %}
<!-- CSS sp√©cifique √† cette page -->
<link rel="stylesheet" href="{{ asset('styles/login.css') }}">

<div class="page-wrapper">
    <!-- Partie gauche avec image et texte -->
    <div class="left-image">
        <div class="gradient-mask"></div>
        <div class="left-text">
            <h1><i>Next</i><span>Work</span class="oop"></h1>
            <p>Vous accompagne vers un avenir meilleur.</p>
        </div>
    </div>
    

    <!-- Partie droite avec formulaire -->
    <div class="right-side">
        <div class="login-card">
            <h2> <span style="color:orange">Ravie</span> de te revoir !</h2>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <form method="post" action="{{ path('app_authentification') }}">
                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="email">Mail</label>
                    <input type="email" id="email" name="email" value="{{ last_username }}" placeholder="Votre email" required autofocus>
                </div>

                <div class="form-group password-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="password" placeholder="Votre mot de passe" required>
                    <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn-login">Se connecter</button>
            </form>

            <button class="btn-google">
               <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo_black.svg" alt="Google G" width="24" height="24">

                Continuer avec Google
            </button>

            <div class="separator"></div>
            <p class="small-text">Pas encore de compte ? <a href="{{ path('app_new_user') }}">Inscription</a></p>
            <a href="#" class="forgot-link">Mot de passe oubli√© ?</a>
        </div>
    </div>
</div>

<script>
function togglePassword() {
    const input = document.getElementById('password');
    input.type = input.type === 'password' ? 'text' : 'password';
}
</script>
{% endblock %}
