{% extends 'base.html.twig' %}

{% block title %}Login Candidat{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="left-image">
        <div class="gradient-mask"></div>
        <div class="left-text">
            <h1>JobTracker</h1>
            <p>Vous accompagne vers un avenir meilleur.</p>
        </div>
    </div>

    <div class="right-side">
        <div class="login-card">
            <h2>Veuillez vous connecter</h2>

            {# --- FLASH MESSAGE SUCCESS --- #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            {# --- FORMULAIRE SYMFONY --- #}
            <form method="post" action="{{ path('app_authentification') }}">

                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" value="{{ last_username }}" placeholder="Votre email" required autofocus>
                </div>

                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password" name="password" placeholder="Votre mot de passe" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn-login">Se connecter</button>
            </form>

            <div class="separator"></div>
            <p class="small-text">Pas encore de compte ?</p>
            <a href="{{ path('app_candidate_new') }}" class="btn-create">Cr√©er compte</a>
        </div>
    </div>
</div>

<style>
/* --- GLOBAL --- */
body { margin: 0; background: #d3d0d0ff; font-family: 'Poppins', sans-serif; }
.page-wrapper { display: flex; min-height: 100vh; }
.left-image { flex: 1.7; background-image: url('{{ asset("images/login.png") }}'); background-size: cover; background-position: center; position: relative; display: flex; align-items: center; padding-left: 70px; }
.gradient-mask { position: absolute; inset: 0; background: linear-gradient(to bottom right, rgba(0,0,0,0.85), rgba(0,0,0,0.4)); }
.left-text { position: relative; z-index: 2; color: white; max-width: 450px; }
.left-text h1 { font-size: 70px; font-weight: 900; letter-spacing: 2px; }
.left-text p { font-size: 25px; margin-top: 15px; color: #eaeaea; }
.right-side { flex: 1; display: flex; justify-content: center; align-items: center; padding: 40px; }
.login-card { width: 380px; padding: 40px; background: rgba(128,123,123,0.8); backdrop-filter: blur(12px); border-radius: 18px; border: 1px solid rgba(255,255,255,0.4); box-shadow: 0 15px 40px rgba(0,0,0,0.15); animation: fadeIn 0.7s ease-out; }
.login-card h2 { font-size: 28px; margin-bottom: 25px; color: #111; }
.form-group { margin-bottom: 20px; }
.form-group label { font-size: 14px; font-weight: 600; color: #333; }
.form-group input { width: 93%; padding: 12px; border-radius: 10px; border: 1px solid #aaa; background: #fafafa; transition: 0.25s ease; }
.form-group input:focus { border-color: #000; background: white; box-shadow: 0 0 8px rgba(0,0,0,0.15); outline: none; }
.btn-login { width: 100%; padding: 14px; border: none; background: #000; color: white; font-weight: 600; font-size: 16px; border-radius: 10px; cursor: pointer; margin-top: 10px; transition: 0.25s ease; }
.btn-login:hover { background: #222; }
.separator { margin: 25px 0; height: 1px; background: #c5c5c5; }
.small-text { text-align: center; font-size: 14px; color: #555; }
.btn-create { display: block; text-align: center; padding: 12px; background: #333; color: white; border-radius: 10px; text-decoration: none; font-weight: 600; transition: 0.25s ease; }
.btn-create:hover { background: #000; }
@keyframes fadeIn { from { opacity: 0; transform: translateY(18px); } to { opacity: 1; transform: translateY(0); } }
@media (max-width: 900px) { .page-wrapper { flex-direction: column; } .left-image { height: 45vh; padding-left: 30px; } }
</style>
{% endblock %}
