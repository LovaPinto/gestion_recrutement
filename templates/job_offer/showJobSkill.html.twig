{% extends 'base.html.twig' %}

{% block title %}
    {{ jobOffer.title }} - DÃ©tail de l'offre
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/job_offer_accordion.css') }}">
{% endblock %}

{% block body %}
    <div class="job-offer-accordion">
        <h1>{{ jobOffer.title }}</h1>

        <div class="accordion-item">
            <button class="accordion">Entreprise</button>
            <div class="panel">
                <p>{{ jobOffer.company.companyName }}</p>
            </div>
        </div>

        <div class="accordion-item">
            <button class="accordion">Deadline</button>
            <div class="panel">
                <p>{{ jobOffer.deadline|date('d-m-Y') }}</p>
            </div>
        </div>

        <div class="accordion-item">
            <button class="accordion">Description</button>
            <div class="panel">
                <p>{{ jobOffer.description }}</p>
            </div>
        </div>

        <div class="accordion-item">
            <button class="accordion">Type d'Offre</button>
            <div class="panel">
                <p>{{ jobOffer.offerType }}</p>
            </div>
        </div>

        <div class="back-button-container">
            <a href="{{ path('app_job_offer') }}" class="back-button">Retour aux offres</a>
        </div>
    </div>
{% endblock %}
