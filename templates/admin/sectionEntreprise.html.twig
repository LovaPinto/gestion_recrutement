{% extends 'admin/headerLayout.html.twig' %}
{% block body %}
{% include 'admin/headertilte.html.twig' %}

    <!-- Metrics -->
{% include 'admin/sectionAjouter.html.twig' %}
{% include 'admin/sectionDashboaard.html.twig' %}


    <!-- Graph section -->


    <!-- list section -->


    <div class="container mt-4">

  <div class="bg-white rounded shadow-sm p-4">
    <h6 class="fw-semibold mb-4">Toutes les entreprises</h6>

    <table class="table align-middle mb-0">
      <thead class="text-muted small border-bottom">
        <tr>
          <th class="tc">ENTREPRISE</th>
          <th class="tc text-center">MANAGERS</th>
          <th class="tc text-center">RH</th>
          <th class="tc text-center">OFFRES ACTIVES</th>
          <th class="tc text-center">CANDIDATS</th>
          <th class="tc text-center">ACTIONS</th>
        </tr>
      </thead>

      <tbody>
        <!-- Row 1 -->
        {% for  entreprise in dataEntreprises %}
            <tr>
                <td>
                    <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle bg-dark text-white fw-semibold d-flex align-items-center justify-content-center"
                            style="width:40px;height:40px;">
                            {{entreprise.avatar}}
                        </div>
                    <div>
                        <div class="tcnom">{{entreprise.nom}}</div>
                        <small class="text-muted">{{entreprise.email}}</small>
                    </div>
                    </div>
          </td>

          <td class="text-center">{{entreprise.manager}}</td>
          <td class="text-center">{{entreprise.rh}}</td>

          <td class="text-center">
            <span class="badge rounded-pill bg-light text-dark px-3">0</span>
          </td>

          <td class="text-center">{{entreprise.candidate}}</td>

          <td class="text-center">
            <a href="#" class="text-dark me-2"><i class="bi bi-eye"></i></a>
            <a href="#" class="text-dark me-2"><i class="bi bi-pencil"></i></a>
            <a href="#" class="text-muted"><i class="bi bi-slash-circle"></i></a>
          </td>
        </tr>
        {% endfor %}

      </tbody>
    </table>

    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">

      <nav>
        <ul class="pagination mb-0">
          <li class="page-item disabled">
            <span class="page-link">&laquo;</span>
          </li>
          <li class="page-item disabled">
            <span class="page-link">&lsaquo;</span>
          </li>
          <li class="page-item active">
            <span class="page-link">Page 1 sur 1</span>
          </li>
          <li class="page-item disabled">
            <span class="page-link">&rsaquo;</span>
          </li>
          <li class="page-item disabled">
            <span class="page-link">&raquo;</span>
          </li>
        </ul>
      </nav>

      <div class="d-flex align-items-center gap-2">
        <span class="small text-muted">Go To Page</span>
        <input type="number" class="form-control form-control-sm w-auto" value="1">
        <button class="btn btn-dark btn-sm">
          Go <i class="bi bi-arrow-right"></i>
        </button>
      </div>

    </div>
  </div>

</div>



{% endblock %}
