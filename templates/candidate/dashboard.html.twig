{% extends 'candidate/menu.html.twig' %}

{% block title %}Dashboard - Candidat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}">
{% endblock %}

{% block content %}
<div class="dashboard-container">

    <!-- Stats Cards -->
    <div class="stats-grid">
        <!-- Card 1: Nombre de candidatures -->
        <div class="stat-card">
            <div class="stat-header">
                <h3 class="stat-title">Nombre de candidatures</h3>
                <button class="stat-refresh"><i class="fas fa-sync-alt"></i></button>
            </div>
            <div class="stat-content">
                <div class="stat-number">{{ totalCandidatures ?? 0 }}</div>
                <div class="stat-label">Candidatures</div>
            </div>
            <div class="stat-footer">
                <span class="stat-subtitle">Total des candidatures effectuées</span>
            </div>
        </div>

        <!-- Card 2: Candidatures en attente -->
        <div class="stat-card">
            <div class="stat-header">
                <h3 class="stat-title">Candidatures en attente</h3>
                <button class="stat-refresh"><i class="fas fa-sync-alt"></i></button>
            </div>
            <div class="stat-content">
                <div class="stat-number">{{ enAttente ?? 0 }}</div>
                <div class="stat-label">Candidatures</div>
            </div>
            <div class="stat-footer">
                <span class="stat-subtitle">Candidatures en attente</span>
            </div>
        </div>

        <!-- Card 3: Candidatures refusées -->
        <div class="stat-card">
            <div class="stat-header">
                <h3 class="stat-title">Candidatures refusées</h3>
                <button class="stat-refresh"><i class="fas fa-sync-alt"></i></button>
            </div>
            <div class="stat-content">
                <div class="stat-number">{{ refusees ?? 0 }}</div>
                <div class="stat-label">Candidatures</div>
            </div>
            <div class="stat-footer">
                <span class="stat-subtitle">Total des candidatures refusées</span>
            </div>
        </div>

        <!-- Card 4: Candidatures acceptées -->
        <div class="stat-card">
            <div class="stat-header">
                <h3 class="stat-title">Candidatures acceptées</h3>
                <button class="stat-refresh"><i class="fas fa-sync-alt"></i></button>
            </div>
            <div class="stat-content">
                <div class="stat-number">{{ acceptees ?? 0 }}</div>
                <div class="stat-label">Candidatures</div>
            </div>
            <div class="stat-footer">
                <span class="stat-subtitle">Total des candidatures acceptées</span>
            </div>
        </div>
    </div>

    <!-- Liste des candidatures -->
    <div class="candidatures-section">
        <h2 class="section-title">Liste de mes candidatures</h2>

        <!-- Search and Date Filter -->
        <div class="search-filter-bar">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" placeholder="            Rechercher par titre ou entreprise" class="search-input" onkeyup="filterTable()">
            </div>

            <div class="filters">
                <div class="filter-group">
                    <label>Date de candidature (Début)</label>
                    <input type="date" id="dateStart" onchange="filterTable()">
                </div>

                <div class="filter-group">
                    <label>Date de candidature (Fin)</label>
                    <input type="date" id="dateEnd" onchange="filterTable()">
                </div>
            </div>
        </div>

        <!-- Table or Empty State -->
        <div class="candidatures-content">
            {% if candidatures is defined and candidatures|length > 0 %}
                <table id="candidaturesTable" class="candidatures-table">
                    <thead>
                        <tr>
                            <th>Entreprise</th>
                            <th>Poste</th>
                            <th>Département</th>
                            <th>Statut</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for candidature in candidatures %}
                            <tr>
                                <td>{{ candidature.jobOffer.company.companyName ?? 'N/A' }}</td>
                                <td>{{ candidature.jobOffer.title ?? 'N/A' }}</td>
                                <td>{{ candidature.jobOffer.department.departmentName ?? 'N/A' }}</td>
                                <td>
                                    <span class="status-badge status-{{ candidature.status|lower|replace({' ': '-', '_': '-'}) }}">
                                        {{ candidature.status }}
                                    </span>
                                </td>
                                <td>{{ candidature.dateCandidacy|date('Y-m-d') }}</td>
                                <td>
                                    <a href="#" class="action-btn"><i class="fas fa-eye"></i></a>
                                    <a href="#" class="action-btn"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="empty-state">
                    <p class="empty-message">Aucune candidature disponible.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
    // Auto-refresh stats
    document.querySelectorAll('.stat-refresh').forEach(btn => {
        btn.addEventListener('click', function() {
            this.classList.add('rotating');
            setTimeout(() => this.classList.remove('rotating'), 1000);
        });
    });

    // Filter function by search and dates
    function filterTable() {
        let input = document.getElementById('searchInput').value.toLowerCase();
        let startDate = document.getElementById('dateStart').value;
        let endDate = document.getElementById('dateEnd').value;
        let table = document.getElementById('candidaturesTable');
        let tr = table.getElementsByTagName('tr');

        for (let i = 1; i < tr.length; i++) {
            let tdCompany = tr[i].getElementsByTagName('td')[0];
            let tdTitle = tr[i].getElementsByTagName('td')[1];
            let tdDate = tr[i].getElementsByTagName('td')[4];
            if (!tdCompany || !tdTitle || !tdDate) continue;

            let companyText = tdCompany.textContent.toLowerCase();
            let titleText = tdTitle.textContent.toLowerCase();
            let rowDate = tdDate.textContent;

            let matchesSearch = companyText.includes(input) || titleText.includes(input);

            let matchesDate = true;
            if (startDate && rowDate < startDate) matchesDate = false;
            if (endDate && rowDate > endDate) matchesDate = false;

            if (matchesSearch && matchesDate) {
                tr[i].style.display = '';
            } else {
                tr[i].style.display = 'none';
            }
        }
    }
</script>
{% endblock %}
