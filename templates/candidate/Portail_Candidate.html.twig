<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>JobTracker</title>

    <link rel="stylesheet" href="{{ asset('styles/portail.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/emplois.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/galerie.css') }}">
</head>

<body>

<!-- Header -->
<header class="header">
    <div class="logo"><span class="orange">Job</span>Tracker</div>
    <div class="login">
        <a href="/login" class="btn-login">Se connecter</a>
    </div>
</header>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Booster votre carrière à Madagascar.</h1>
    </div>

    <div class="hero-form">
        <div class="search-form">
     <div class="input-wrapper modern-search">
    <input type="search" placeholder="Rechercher un emploi...">
    <span class="search-icon">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none">
            <path d="M15 15L21 21" stroke="#777" stroke-width="2" stroke-linecap="round"/>
            <circle cx="10" cy="10" r="6" stroke="#777" stroke-width="2"/>
        </svg>
    </span>
</div>


        </div>

        <div class="filters-row">
            <div class="filter-box">
                <label>Entreprise :</label>
                <select>
                    <option selected>Entreprise A</option>
                    <option>Entreprise B</option>
                </select>
            </div>

            <div class="filter-box">
                <label>Département :</label>
                <select>
                    <option selected>IT</option>
                    <option>Marketing</option>
                </select>
            </div>

            <div class="filter-box">
                <label>Poste disponible :</label>
                <select>
                    <option selected>Développeur</option>
                    <option>Manager</option>
                </select>
            </div>
        </div>
    </div>
</section>

<!-- Derniers emplois -->
<section class="main-content">
    <div class="container">
        <section class="section">
            <div class="section-header">
                <h2 class="title">Derniers emplois</h2>
            </div>

            <nav class="filters" aria-label="Filtrer par type de contrat">
                <button class="filter active" type="button">Toutes les offres</button>
                <button class="filter" type="button">CDI</button>
                <button class="filter" type="button">CDD</button>
                <button class="filter" type="button">Stage</button>
                <button class="filter" type="button">Freelance</button>
            </nav>

            <table class="table">
                <thead>
                    <tr>
                        <th>Position</th>
                        <th>Entreprise</th>
                        <th>Contract</th>
                    </tr>
                </thead>
                <tbody>
                {% if datas is defined and datas is not empty %}
                    {% for job in datas %}
                        <tr>
                            <td class="position">{{ job.description }}</td>
                            <td class="company">{{ job.company.companyName }}</td>
                            <td><span class="contract cdd">{{ job.offerType }}</span></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr><td colspan="3">Aucune offre disponible</td></tr>
                {% endif %}
                </tbody>
            </table>

            <div class="actions">
                <a class="btn" href="#">More Jobs &gt;</a>
            </div>
        </section>
    </div>
</section>

<!-- Galerie + Pourquoi JobTracker -->
<section class="bottom-section">
    <div class="gallery">
        <!-- Ligne 1 : 2 images -->
        <div class="row row-1">
            <img src="{{ asset('images/login.png') }}" alt="">
            <img src="{{ asset('images/business-woman-cute-smart-girl-standing-with-crossed-hands-with-red-lipstick-office-costume.jpg') }}" alt="">
        </div>

        <!-- Ligne 2 : 3 images -->
        <div class="row row-2">
            <img src="{{ asset('images/aza.jpg') }}" alt="">
                  <img src="{{ asset('images/front-view-young-male-red-sweater-smiling-black-wall.jpg') }}" alt="">
              <img src="{{ asset('images/portrait-confident-businesswoman-smiling.jpg') }}" alt="">
           
        </div>

        <!-- Ligne 3 : 2 images -->
        <div class="row row-3">
         <img src="{{ asset('images/blonde-young-woman-against-grey-wall-looking-away.jpg') }}" alt="">
      
             <img src="{{ asset('images/young-curly-young-man-with-crossed-hands-isolated-white-wall (1).jpg') }}" alt="">
           
        </div>
    </div>

    <!-- Raisons -->
    <section class="reasons-right">
        <h2>Pourquoi utiliser JobTracker</h2>
        <ul>
            <li>Facile à utiliser</li>
            <li>Offres fiables</li>
            <li>Suivi personnalisé</li>
        </ul>
    </section>
</section>

</body>
</html>
