<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Nextwork - Candidat{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('styles/menu.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/profil.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-logo"><span>Nextwork</span></div>
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_candidate_dashboard') }}" class="{% if 'candidate_dashboard' in app.request.attributes.get('_route') %}active{% endif %}">
                    <i class="fas fa-th-large"></i>Dashboard
                </a>
            </li>
            <li>
                <a href="{{ path('app_candidate_index') }}">
                    <i class="fas fa-briefcase"></i>Mes candidatures
                </a>
            </li>
            <li>
                <a href="{{ path('app_candidate_profil', {'id': candidate.id}) }}">
                    <i class="fas fa-user"></i>Mon profil
                </a>
            </li>
        </ul>
    </div>

    <main>
        <div class="header">
            <div class="header-left">
                <div class="header-title">
                    <i class="fas fa-home"></i>
                    <span>Accueil</span>
                </div>
            </div>
            <div class="header-right">
                <div class="header-search">
                    <input type="text" placeholder="Search jobs and keywords">
                </div>
                <div class="header-icons">
                    <a href="#" title="Notifications">
                        <i class="fas fa-bell">
                        </i>
                    </a>
                    <a href="#" title="Settings">
                        <i class="fas fa-cog"></i>
                    </a>
                <div class="user-avatar" title="Profile">U</div>
                </div>
            </div>
        </div>
        <div class="content">{% block content %}{% endblock %}</div>
    </main>
    {% block extra_js %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</body>
</html>
