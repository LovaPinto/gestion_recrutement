<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Nextwork - Candidat{% endblock %}</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- CSS personnalisÃ© -->
    <link rel="stylesheet" href="{{ asset('styles/menu.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/profil.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Sidebar Navigation -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <h2 class="sidebar-title">Nextwork</h2>
        </div>
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="{{ path('app_candidate_dashboard') }}" class="nav-link {% if 'candidate_dashboard' in app.request.attributes.get('_route') %}active{% endif %}">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="{{ path('app_candidate_index') }}" class="nav-link">
                    <i class="fas fa-briefcase"></i>
                    <span>Mes candidatures</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="{% if candidate %}{{ path('app_candidate_profil', {'id': candidate.id}) }}{% else %}#{% endif %}" class="nav-link">
                    <i class="fas fa-user"></i>
                    <span>Mon profil</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-wrapper">
        <!-- Top Header -->
        <header class="top-header">
            <div class="header-left">
                <i class="fas fa-bars toggle-sidebar"></i>
                <span class="breadcrumb-text">Accueil</span>
            </div>
            <div class="header-right">
                <div class="header-actions">
                    <button class="icon-btn">
                        <i class="fas fa-bell"></i>
                    </button>
                    <div class="user-profile">
                        <div class="user-avatar">
                            {% if candidate %}{{ candidate.nom|first|upper }}{% else %}C{% endif %}
                        </div>
                        <span class="user-name">
                            {% if candidate %}{{ candidate.nom }} {{ candidate.prenom }}{% else %}Candidat{% endif %}
                        </span>
                        <i class="fas fa-cog settings-icon"></i>
                    </div>
                </div>
            </div>
        </header>

        <main class="page-content">
            {% block content %}{% endblock %}
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar on mobile
        document.querySelector('.toggle-sidebar')?.addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>
    {% block extra_js %}{% endblock %}
</body>
</html>
