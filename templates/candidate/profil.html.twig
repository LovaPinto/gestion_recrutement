{% extends 'candidate/menu.html.twig' %}

{% block title %}Profil Candidat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/profil.css') }}">
{% endblock %}

{% block content %}
<div class="container profile-container">
    <h2 class="profile-title">Mon profil</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="profile-card">
        <h4 class="profile-subtitle">Mes informations</h4>
        
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prenom) }}
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.telephone) }}
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-12">
                {{ form_row(form.adresse) }}
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                {{ form_row(form.nationalite) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.genre) }}
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                {{ form_row(form.dateNaissance) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.status) }}
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                {{ form_row(form.linkedin) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.facebook) }}
            </div>
        </div>

        <hr class="form-separator">

        <h5 class="form-section-title">Documents</h5>
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                {{ form_row(form.cvFile) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lmFile) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-actions">
            <a href="{{ path('app_candidate_dashboard') }}" class="btn btn-cancel">Annuler</a>
            <button type="submit" class="btn btn-save">Enregistrer les modifications</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}