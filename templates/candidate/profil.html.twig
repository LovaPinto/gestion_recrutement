{% extends 'candidate/menu.html.twig' %}

{% block title %}Profil Candidat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/profil.css') }}">
{% endblock %}

{% block content %}
<div class="container profile-container">
    <h2 class="profile-title">Mon profil</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">{{ message }}</div>
    {% endfor %}

    <div class="profile-card">
        <h4 class="profile-subtitle">Mes informations</h4>

        {# DÃ©marrage du formulaire #}
        {{ form_start(form) }}

        <div class="row g-3 mb-3">
            <div class="col-md-6">{{ form_row(form.nom) }}</div>
            <div class="col-md-6">{{ form_row(form.prenom) }}</div>
        </div>

        <div class="mb-3">{{ form_row(form.email) }}</div>
        <div class="mb-3">{{ form_row(form.telephone) }}</div>
        <div class="mb-3">{{ form_row(form.adresse) }}</div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">{{ form_row(form.nationalite) }}</div>
            <div class="col-md-6">{{ form_row(form.genre) }}</div>
        </div>

        <div class="mb-3">{{ form_row(form.dateNaissance) }}</div>
        <div class="mb-3">{{ form_row(form.linkedin) }}</div>
        <div class="mb-3">{{ form_row(form.facebook) }}</div>
        <div class="mb-3">{{ form_row(form.status) }}</div>

        <hr class="form-separator">

        <h5 class="form-section-title">Documents</h5>
        <div class="mb-3">{{ form_row(form.cvFile) }}</div>
        <div class="mb-3">{{ form_row(form.lmFile) }}</div>

        <button type="submit" class="btn profile-btn w-100">Enregistrer</button>

        {# Fin du formulaire #}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
